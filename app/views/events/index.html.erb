<p id="notice"><%= notice %></p>

<h2>Events</h2>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Dow</th>
      <th>Month</th>
      <th>Title</th>
      <th>Genre</th>
      <th>Receipts</th>
      <th>Zinz</th>
      <th>Double</th>
      <th>Composer</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.date %></td>
        <td><%= event.dow %></td>
        <td><%= event.month %></td>
        <td><%= event.title %></td>
        <td><%= event.genre %></td>
        <td><%= event.receipts %></td>
        <td><%= event.zinz %></td>
        <td><%= event.double %></td>
        <td><%= event.composer %></td>
        <td><%= event.author %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
